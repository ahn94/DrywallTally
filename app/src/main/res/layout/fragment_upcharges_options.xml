<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:nestedScrollingEnabled="true"
    android:fillViewport="false"
    tools:context=".job.options.UpchargeOptionsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/view_bull_corner"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/title_bull_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bullnose Corners"
                    android:layout_alignParentStart="true"
                    android:textSize="18sp"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/value_bull_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_bull_corner"
                    tools:text="value"
                    android:singleLine="false"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pref_icon"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/view_bull_adapter"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/title_bull_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bullnose Adapter"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:singleLine="false"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:id="@+id/check_bullnose_adapter"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/view_window_wrap3"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/title_window_wrap3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
