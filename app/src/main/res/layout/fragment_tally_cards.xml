<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:cardElevation="0dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:padding="1.5dp"
                android:text="@string/eight_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />


            <TextView
                android:id="@+id/half_8_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:padding="1.5dp"
                android:text="@string/nine_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/half_9_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:padding="1.5dp"
                android:text="@string/ten_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/half_10_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:padding="1.5dp"
                android:text="@string/twelve_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/half_12_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:padding="1.5dp"
                android:text="@string/fourteen_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/half_14_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="5"
                android:padding="1.5dp"
                android:text="@string/sixteen_feet"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:padding="1.5dp"
                android:text="@string/hyphen_with_space"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/half_16_total"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:padding="1.5dp"
                android:paddingTop="1.5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                tools:text="0"
                />

        </GridLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>