<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.austinnightingale.android.drywalltally">

    <application
        android:name=".TallyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity
            android:name=".job.JobActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".jobs.JobsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".backup.BackupActivity"
            android:label="@string/title_activity_backup"
            android:parentActivityName=".jobs.JobsActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".jobs.JobsActivity"/>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".tally.TallyActivity"
            android:label="@string/title_activity_tally"
            android:parentActivityName=".job.JobActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.austinnightingale.android.drywalltally.job.JobActivity"/>
        </activity>
    </application>

</manifest>